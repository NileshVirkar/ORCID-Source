<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="LAST-INDEXED-DATE" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="record_status" columnName="last_indexed_date"/>
            </not>            
		</preConditions>
		<!-- Indicates the number of times it have failed to be sent to S3 -->
		<sql>ALTER TABLE record_status ADD last_indexed_date TIMESTAMP WITH TIME ZONE;</sql>		
	</changeSet>
			
	<changeSet id="LAST-INDEXED-DATE-INDEX" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<indexExists indexName="last_indexed_date_index" tableName="record_status" />
			</not>
		</preConditions>
		<sql>create index last_indexed_date_index on record_status(last_indexed_date);</sql>
	</changeSet>
</databaseChangeLog>